{
  "name": "main-sc-protocol",
  "version": "0.2.0",
  "private": true,
  "homepage": "https://www.moneyonchain.com",
  "description": "Money on Chain main smart contract protocol",
  "author": "MOC Investments Corp. 2020",
  "license": "AGPL-3.0",
  "dependencies": {
    "hardhat": "2.11.1",
    "hardhat-deploy": "0.11.14",
    "hardhat-storage-layout": "0.1.6",
    "solc": "0.8.16"
  },
  "devDependencies": {
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "17.1.0",
    "@nomicfoundation/hardhat-toolbox": "2.0.0",
    "@nomiclabs/hardhat-solhint": "2.0.1",
    "@openzeppelin/contracts": "4.7.3",
    "@openzeppelin/contracts-upgradeable": "4.7.3",
    "@openzeppelin/hardhat-upgrades": "1.20.0",
    "@typechain/ethers-v5": "10.1.0",
    "@types/chai": "4.3.3",
    "@types/fs-extra": "9.0.13",
    "@types/mocha": "9.1.1",
    "@types/node": "18.7.15",
    "@typescript-eslint/eslint-plugin": "5.36.2",
    "@typescript-eslint/parser": "5.36.2",
    "chai": "4.3.6",
    "dotenv": "16.0.2",
    "eslint": "8.23.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-no-only-tests": "3.0.0",
    "fs-extra": "10.1.0",
    "hardhat-contract-sizer": "2.6.1",
    "hardhat-docgen": "1.3.0",
    "hardhat-preprocessor": "0.1.5",
    "hardhat-prettier": "0.0.1",
    "husky": "8.0.1",
    "prettier": "2.7.1",
    "prettier-plugin-solidity": "1.0.0-beta.24",
    "shelljs": "0.8.5",
    "solhint": "3.3.7",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "0.8.2",
    "standard-version": "9.5.0",
    "ts-generator": "0.1.1",
    "ts-node": "10.9.1",
    "typechain": "8.1.0",
    "typescript": "4.8.2"
  },
  "comments": {
    "dependencies": "hardhat-solhint includes an old version of solhint, that's why specific solhint dependency is added"
  },
  "types": "types/index.d.ts",
  "files": [
    "/contracts"
  ],
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "solidity",
    "rsk"
  ],
  "scripts": {
    "prepare": "husky install",
    "clean": "hardhat clean",
    "typechain": "TS_NODE_TRANSPILE_ONLY=true hardhat --config ./hardhat.base.config.ts typechain",
    "compile": "npm run typechain && hardhat compile",
    "coverage": "hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"./test/**/*.ts\"",
    "lint": "npm run lint:sol && npm run lint:ts && npm run prettier:check",
    "lint:sol": "solhint --config .solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "prettier": "prettier --config .prettierrc --write \"**/*.{js,json,md,sol,ts}\"",
    "prettier:check": "prettier --config .prettierrc --check \"**/*.{js,json,md,sol,ts}\"",
    "release": "standard-version",
    "security": "docker run -it -v $(pwd):/home/ethsec/project trailofbits/eth-security-toolbox",
    "security-default": "echo \"solc-select use 0.8.16 && cd project && slither --exclude-dependencies --exclude pragma,low-level-calls .\" | sudo docker run -i -v $(pwd):/home/ethsec/project trailofbits/eth-security-toolbox",
    "echidna": "echo \"cd project && echidna-test . --contract $npm_config_contract --config contracts/echidna/default.yaml\" | sudo docker run -i -v $(pwd):/home/ethsec/project trailofbits/eth-security-toolbox",
    "size-contracts": "hardhat size-contracts",
    "docgen": "hardhat docgen",
    "test": "hardhat test --typecheck",
    "report:gas": "REPORT_GAS=true hardhat test",
    "mythril:Greeter": "sudo docker run -it -v $(pwd):/tmp mythril/myth -v4 a -f /tmp/bytecodes/Greeter --max-depth 50",
    "mythril": "npx ts-node ./scripts/bytecodes-extractor.ts && npm run mythril:Greeter",
    "storage-layout": "npx ts-node ./scripts/storage-layout.ts"
  }
}
