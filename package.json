{
  "name": "main-sc-protocol-v2",
  "version": "1.0.0",
  "private": true,
  "homepage": "https://www.moneyonchain.com",
  "description": "Money on Chain V2 main smart contract protocol",
  "author": "MOC Investments Corp. 2020",
  "license": "AGPL-3.0",
  "dependencies": {
    "hardhat": "2.14.0",
    "hardhat-deploy": "0.11.30",
    "hardhat-storage-layout": "0.1.7",
    "solc": "0.8.20"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.3",
    "@commitlint/config-conventional": "17.6.3",
    "@nomicfoundation/hardhat-toolbox": "2.0.2",
    "@nomiclabs/hardhat-solhint": "3.0.1",
    "solidity-coverage": "0.8.9",
    "@openzeppelin/contracts": "4.9.3",
    "@openzeppelin/contracts-upgradeable": "4.9.3",
    "@openzeppelin/hardhat-upgrades": "1.27.0",
    "@openzeppelin/upgrades-core": "1.31.1",
    "@typechain/ethers-v5": "10.2.1",
    "@types/chai": "4.3.5",
    "@types/fs-extra": "11.0.1",
    "@types/memoizee": "0.4.8",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "5.59.7",
    "@typescript-eslint/parser": "5.59.7",
    "chai": "4.3.7",
    "copyfiles": "2.4.1",
    "dotenv": "16.0.3",
    "eslint": "8.41.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-no-only-tests": "3.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "hardhat-contract-sizer": "2.9.0",
    "hardhat-docgen": "1.3.0",
    "hardhat-erc1820": "0.1.0",
    "hardhat-preprocessor": "0.1.5",
    "hardhat-storage-layout-diff": "0.0.4",
    "husky": "8.0.3",
    "memoizee": "0.4.15",
    "prettier": "2.8.8",
    "prettier-plugin-solidity": "1.1.3",
    "solhint": "3.4.1",
    "solhint-plugin-prettier": "0.0.5",
    "standard-version": "9.5.0",
    "ts-node": "10.9.1",
    "typechain": "8.2.0",
    "typescript": "5.0.4"
  },
  "overrides": {
    "eth-gas-reporter": {
      "axios": "1.6.0"
    },
    "axios": {
      "follow-redirects": "1.15.4"
    }
  },
  "comments": {
    "dependencies": "hardhat-solhint and hardhat-prettier includes old versions, that's why specific dependencies are added",
    "upgrades-core": "TODO: this dep is fixed to v1.31.1 because of a TSC issue, follow https://github.com/OpenZeppelin/openzeppelin-upgrades/issues/976"
  },
  "types": "types/index.d.ts",
  "files": [
    "/contracts",
    "/export"
  ],
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "solidity",
    "rsk"
  ],
  "scripts": {
    "prepare": "husky install",
    "clean": "hardhat clean",
    "typechain": "TS_NODE_TRANSPILE_ONLY=true hardhat --config ./hardhat.base.config.ts typechain",
    "compile": "npm run typechain && hardhat compile",
    "compile-not-viair": "VIA_IR=false npm run typechain && VIA_IR=false hardhat compile",
    "coverage": "npm run clean && VIA_IR=true hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"./test/**/*.ts\"",
    "lint": "npm run lint:sol && npm run lint:ts && npm run prettier:check",
    "lint:sol": "solhint --config .solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "lint-fix": "eslint --fix --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "prettier": "prettier --config .prettierrc --write \"**/*.{js,json,md,sol,ts}\"",
    "prettier:check": "prettier --config .prettierrc --check \"**/*.{js,json,md,sol,ts}\"",
    "release": "standard-version",
    "security": "docker run -it -v $(pwd):/home/ethsec/project trailofbits/eth-security-toolbox",
    "security-default": "echo \"solc-select install 0.8.20 && solc-select use 0.8.20 && cd project && slither --exclude-dependencies --exclude pragma,low-level-calls .\" | sudo docker run -i -v $(pwd):/home/ethsec/project trailofbits/eth-security-toolbox",
    "slither": "slither .",
    "echidna-docker-assertion": "echo \"cd src/contracts && solc-select install 0.8.20 && solc-select use 0.8.20 && echidna-test $npm_config_file --test-mode assertion --contract $npm_config_contract --config echidna/default.yaml\" | sudo docker run -i -v `pwd`:/src ghcr.io/crytic/echidna/echidna",
    "echidna-docker-property": "echo \"cd src/contracts && solc-select install 0.8.20 && solc-select use 0.8.20 && echidna-test $npm_config_file --test-mode property --contract $npm_config_contract --config echidna/default.yaml\" | sudo docker run -i -v `pwd`:/src ghcr.io/crytic/echidna/echidna",
    "echidna-assertion": "echidna . --test-mode assertion --contract $npm_config_contract --config contracts/echidna/default.yaml",
    "echidna-property": "echidna . --test-mode property --contract $npm_config_contract --config contracts/echidna/default.yaml",
    "size-contracts": "hardhat size-contracts",
    "docgen": "hardhat docgen",
    "test": "hardhat test --typecheck",
    "test-parallel": "hardhat test --typecheck --parallel",
    "test-gas-estimation": "hardhat test --typecheck --grep '/.*gas estimation.*/i'",
    "report:gas": "REPORT_GAS=true hardhat test",
    "storage-layout": "npx ts-node ./scripts/storage-layout.ts",
    "storage-layout-compare:MocCoreExpansion": "hardhat storage-layout-compare --a contracts/core/MocCore.sol:MocCore --b contracts/core/MocCoreExpansion.sol:MocCoreExpansion",
    "export": "rm -rf export/ && hardhat export-artifacts export/artifacts && rm -rf dist/ && tsc && npm run copy-dist",
    "copy-dist": "copyfiles -u 1 dist/deploy/**/*.js export && copyfiles -u 1 dist/scripts/**/* export",
    "mythril:MocCACoinbase": "myth analyze ./contracts/collateral/coinbase/MocCACoinbase.sol --solc-json mythril.config.json --execution-timeout 3600",
    "mythril:MocCARC20": "myth analyze ./contracts/collateral/rc20/MocCARC20.sol --solc-json mythril.config.json --execution-timeout 3600",
    "mythril:MocCoreExpansion": "myth analyze ./contracts/core/MocCoreExpansion.sol --solc-json mythril.config.json --execution-timeout 3600",
    "mythril:MocVendors": "myth analyze ./contracts/vendors/MocVendors.sol --solc-json mythril.config.json --execution-timeout 3600",
    "mythril:MocTC": "myth analyze ./contracts/tokens/MocTC.sol --solc-json mythril.config.json --execution-timeout 3600",
    "mythril:MocQueue": "myth analyze ./contracts/queue/MocQueue.sol --solc-json mythril.config.json --execution-timeout 3600"
  }
}
