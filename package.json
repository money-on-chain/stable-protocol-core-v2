{
  "name": "main-sc-protocol",
  "version": "0.2.0",
  "private": true,
  "homepage": "https://www.moneyonchain.com",
  "description": "Money on Chain main smart contract protocol",
  "author": "MOC Investments Corp. 2020",
  "license": "AGPL-3.0",
  "dependencies": {
    "hardhat": "2.12.2",
    "hardhat-deploy": "0.11.20",
    "hardhat-storage-layout": "0.1.7",
    "solc": "0.8.17"
  },
  "devDependencies": {
    "@commitlint/cli": "17.2.0",
    "@commitlint/config-conventional": "17.2.0",
    "@nomicfoundation/hardhat-toolbox": "2.0.0",
    "@nomiclabs/hardhat-solhint": "2.0.1",
    "@openzeppelin/contracts": "4.8.0",
    "@openzeppelin/contracts-upgradeable": "4.8.0",
    "@openzeppelin/hardhat-upgrades": "1.21.0",
    "@typechain/ethers-v5": "10.1.1",
    "@types/chai": "4.3.4",
    "@types/fs-extra": "9.0.13",
    "@types/memoizee": "0.4.8",
    "@types/node": "18.11.9",
    "@typescript-eslint/eslint-plugin": "5.43.0",
    "@typescript-eslint/parser": "5.43.0",
    "chai": "4.3.7",
    "dotenv": "16.0.3",
    "eslint": "8.27.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-no-only-tests": "3.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "hardhat-contract-sizer": "2.6.1",
    "hardhat-docgen": "1.3.0",
    "hardhat-preprocessor": "0.1.5",
    "husky": "8.0.2",
    "memoizee": "0.4.15",
    "prettier": "2.7.1",
    "prettier-plugin-solidity": "1.0.0-rc.1",
    "solhint": "3.3.7",
    "solhint-plugin-prettier": "0.0.5",
    "standard-version": "9.5.0",
    "ts-generator": "0.1.1",
    "ts-node": "10.9.1",
    "typechain": "8.1.1",
    "typescript": "4.8.4",
    "copyfiles": "2.4.1"
  },
  "comments": {
    "dependencies": "hardhat-solhint and hardhat-prettier includes old versions, that's why specific dependencies are added"
  },
  "types": "types/index.d.ts",
  "files": [
    "/contracts",
    "/export"
  ],
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "solidity",
    "rsk"
  ],
  "scripts": {
    "prepare": "husky install",
    "clean": "hardhat clean",
    "typechain": "TS_NODE_TRANSPILE_ONLY=true hardhat --config ./hardhat.base.config.ts typechain",
    "compile": "VIA_IR=true npm run typechain && VIA_IR=true hardhat compile",
    "coverage": "hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"./test/**/*.ts\"",
    "lint": "npm run lint:sol && npm run lint:ts && npm run prettier:check",
    "lint:sol": "solhint --config .solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "lint-fix": "eslint --fix --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "prettier": "prettier --config .prettierrc --write \"**/*.{js,json,md,sol,ts}\"",
    "prettier:check": "prettier --config .prettierrc --check \"**/*.{js,json,md,sol,ts}\"",
    "release": "standard-version",
    "security": "docker run -it -v $(pwd):/home/ethsec/project trailofbits/eth-security-toolbox",
    "security-default": "echo \"solc-select install 0.8.17 && solc-select use 0.8.17 && cd project && slither --exclude-dependencies --exclude pragma,low-level-calls .\" | sudo docker run -i -v $(pwd):/home/ethsec/project trailofbits/eth-security-toolbox",
    "echidna": "echo \"cd src/contracts && solc-select install 0.8.17 && solc-select use 0.8.17 && echidna-test $npm_config_file --test-mode assertion --contract $npm_config_contract --config echidna/default.yaml\" | sudo docker run -i -v `pwd`:/src ghcr.io/crytic/echidna/echidna",
    "size-contracts": "hardhat size-contracts",
    "docgen": "hardhat docgen",
    "test": "hardhat test --typecheck",
    "test-parallel": "hardhat test --typecheck --parallel",
    "report:gas": "REPORT_GAS=true hardhat test",
    "mythril:Greeter": "sudo docker run -it -v $(pwd):/tmp mythril/myth -v4 a -f /tmp/bytecodes/Greeter --max-depth 50",
    "mythril": "npx ts-node ./scripts/bytecodes-extractor.ts && npm run mythril:Greeter",
    "storage-layout": "npx ts-node ./scripts/storage-layout.ts",
    "export": "hardhat export-artifacts export/artifacts && tsc && npm run copy-dist",
    "copy-dist": "copyfiles -u 1 dist/deploy/**/*.js export/deploy && copyfiles -u 1 dist/scripts/utils.js export/deploy && copyfiles -u 1 dist/deploy-config/config.js export/deploy"
  }
}
